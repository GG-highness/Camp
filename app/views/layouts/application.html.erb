<!DOCTYPE html>
<html>
  <head>
    <title>Camps</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="responsive.scss">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jscroll/2.4.1/jquery.jscroll.min.js"></script>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%= link_to("/") do %>
          <%= image_tag 'header_icon.png' %>
        <% end %>
        <div class="logo-name">
          <%= link_to("Camps", "/") %>
        </div>
      </div>
    </header>
    
    <input id="menu" type="checkbox"></input>
    <label for="menu" class="open"><i class="fa fa-bars"></i></label>
    <label for="menu" class="back"></label>
    
    <div class="main">
      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <%= yield %>
    </div>
    
    <div class="aside">
      <nav>
        <ul>
        <% if @current_user %>
          <li>
            <%= link_to("/") do %>
            <i class="fa fa-home" aria-hidden="true"></i>ホーム
            <% end %>
          </li>
          <li>
            <%= link_to("/logout", {method: :post}) do %>
            <i class="fa fa-sign-out" aria-hidden="true"></i>ログアウト
            <% end %>
          </li>
          <li>
            <%= link_to("/users/#{@current_user.id}") do %>
            <i class="fa fa-user" aria-hidden="true"></i>マイページ
            <% end %>
          </li>
          <li>
            <%= link_to(edit_user_path(@current_user)) do %>
            <i class="fa fa-cog" aria-hidden="true"></i>設定
            <% end %>
          </li>
          <li>
            <%= link_to("/posts/new") do %>
            <i class="fa fa-plus" aria-hidden="true"></i>新規投稿
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to("/") do %>
            <i class="fa fa-home" aria-hidden="true"></i>ホーム
            <% end %>
          </li>
          <li>
            <%= link_to("/login") do %>
            <i class="fa fa-sign-in" aria-hidden="true"></i>ログイン
            <% end %>
          </li>
          <li>
            <%= link_to(new_user_path) do %>
            <i class="fa fa-user-plus" aria-hidden="true"></i>新規登録
            <% end %>
          </li>
        <% end %>
        </ul>
      </nav>
      <div id='footer'>
        <p><small>&copy; 2020 Camp All rights reserved.</small></p>
      </div>
    </div>
      
    <script src="application.js"></script>
  </body>
</html>
