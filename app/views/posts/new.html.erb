<div class="posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <div class="form">
      <div class="form-body">
        <%= form_for @post do |f| %>
          
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          
          <%= f.text_area :content, placeholder: "content" %>
          
          <%= f.submit "投稿" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
