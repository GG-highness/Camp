<div class="posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <%= form_with model:@item, local:true do |f|  %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          
          <%= f.fields_for :images do |i| %>
            <%= i.file_field :image %>
          <% end %>
          <%= f.text_field :content %>
          <%= f.submit "Save",name:"commit" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
