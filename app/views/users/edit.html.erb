<div class="users-edit">
  <div class="container">
    <div class="form users-form">
      <div class="form-body">
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>
          
          <div class="picture">
            <%= f.label :image_name, class: "drop", for: "change-image" do %>
              <div class="input_area">
                <%= f.file_field :image_name, id: "change-image", class: "prev-image" %>
              </div>
              <i class="fa fa-picture-o"></i>
            <% end %>
          </div>
          <div class="user_image_prev">
            <% if @user.image_name.file.nil? %>
              <%= image_tag "default_user.jpg" %>
            <% else %>
              <img src='<%= @user.image_name %>'>
            <% end %>
          </div>
          
          <%= f.label :name, "名前" %>
          <%= f.text_field :name %>
          
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email %>
          
          <%= f.label :profile, "プロフィール" %>
          <%= f.text_area :profile, class: "profile" %>
          
          <%= f.submit "保存", class: "btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>



  